<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="190" prefWidth="140" styleClass="product-container" stylesheets="@../../css/theme.css" type="Pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="190.0" prefWidth="140.0" spacing="2.0">
         <children>
            <Pane fx:id="productIconContainer" prefHeight="130.0" prefWidth="130.0" styleClass="product-view">
               <children>
                  <ImageView fx:id="productIcon" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </Pane>
            <Label fx:id="productName" maxWidth="130.0" prefHeight="15.0" styleClass="product-name" text="Spotify 1 year" wrapText="true">
               <VBox.margin>
                  <Insets left="2.0" right="2.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="productCost" layoutX="17.0" layoutY="148.0" maxWidth="130.0" prefHeight="25.0" text="cop $50.000" textFill="#40bf24" wrapText="true">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="2.0" right="2.0" />
               </VBox.margin>
               <styleClass>
                  <String fx:value="product-cost" />
                  <String fx:value="semibold-text" />
               </styleClass>
            </Label>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</fx:root>
