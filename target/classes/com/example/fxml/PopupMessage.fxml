<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefWidth="240.0" stylesheets="@../css/theme.css" type="Pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <VBox prefWidth="240.0" style="-fx-background-color: transparent;">
      <children>
        <Label fx:id="label" alignment="CENTER" prefWidth="240.0" text="This is a cool message" textAlignment="CENTER" wrapText="true">
          <font>
            <Font size="14.0" />
          </font>
          <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
          </padding>
        </Label>
        <HBox fx:id="buttonContainer" alignment="CENTER" prefHeight="30.0" prefWidth="240.0" />
      </children>
    </VBox>
  </children>
  <styleClass>
    <String fx:value="container" />
    <String fx:value="popup" />
  </styleClass>
</fx:root>
